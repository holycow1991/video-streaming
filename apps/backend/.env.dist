PORT=3001
UPLOADS_FOLDER=./uploads

# MongoDB Root Credentials
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin

# MongoDB Database Configuration
MONGO_DATABASE=app_db
MONGO_PORT=27017

# Volume Names
MONGO_DATA_VOLUME=mongodb_data

# Network Configuration
NETWORK_NAME=app-network

# Application Database User (created via mongo-init.js)
MONGO_APP_USERNAME=app_user
MONGO_APP_PASSWORD=app_user

# MongoDB Express (Admin UI) - Optional
MONGO_EXPRESS_CONTAINER_NAME=mongo-express
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin
MONGO_EXPRESS_ENABLE_ADMIN=true

# MongoDB Connection String for your application
MONGO_CONNECTION_STRING=mongodb://${MONGO_APP_USERNAME}:${MONGO_APP_PASSWORD}@localhost:${MONGO_PORT}/${MONGO_DATABASE}?authSource=${MONGO_DATABASE}

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secret_access_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_min_32_chars
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
